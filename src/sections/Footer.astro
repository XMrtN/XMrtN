const LINKS = [
  {
    href: "/#inicio",
    name: "Inicio",
  },
  {
    href: "mailto:sepulvedamartin072@gmail.com",
    name: "Contáctame",
  },
];
---

<footer
  class="flex flex-wrap items-center justify-between gap-x-4 gap-y-2 pb-6 pt-24 text-sm dark:bg-none"
>
  <span>
    &#169; 2024. Estructura de
    <a
      class="text-primary-800 hover:underline dark:text-primary-300"
      href="https://porfolio.dev/"
      target="_blank"
      rel="noreferrer">midudev</a
    > y diseño de
    <a
      class="text-primary-800 hover:underline dark:text-primary-300"
      href="https://www.wrappingmati.com.ar/"
      target="_blank"
      rel="noreferrer">wrappingmati</a
    >.
  </span>

  <ul class="flex">
    {
      LINKS.map((link) => (
        <li class="group">
          <a
            href={link.href}
            aria-label={link.name}
            class="inline-block whitespace-nowrap py-2 font-medium transition-colors group-first:pr-2 group-last:pl-2 hover-active:text-primary-600 dark:hover-active:text-primary-300"
          >
            {link.name}
          </a>
        </li>
      ))
    }
  </ul>
</footer>
