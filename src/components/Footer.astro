---
import Container from "./Container.astro";

const LINKS = [
  {
    href: "#inicio",
    name: "Inicio",
  },
  {
    href: "mailto:sepulvedamartin072@gmail.com",
    name: "Contáctame",
  },
];
---

<footer
  class="bg-gradient-to-r from-primary-100 to-primary-400 pb-12 dark:bg-primary-950 dark:bg-none md:pb-14"
>
  <Container
    class="grid items-center gap-8 text-sm sm:grid-cols-[1fr_max-content]"
  >
    <span class="text-zinc-600 dark:text-zinc-400">
      &#169; 2024. Estructura de
      <a
        class="text-primary-900 decoration-primary-900 hover:underline dark:text-primary-300 dark:decoration-primary-300"
        href="https://porfolio.dev/"
        target="_blank"
        rel="noreferrer">midudev</a
      > y diseño de
      <a
        class="text-primary-900 decoration-primary-900 hover:underline dark:text-primary-300 dark:decoration-primary-300"
        href="https://www.wrappingmati.com.ar/"
        target="_blank"
        rel="noreferrer">wrappingmati</a
      >.
    </span>

    <ul class="sm:flex sm:justify-end">
      {
        LINKS.map((link) => (
          <li class="group">
            <a
              href={link.href}
              aria-label={link.name}
              class="inline-block whitespace-nowrap py-2 font-medium text-primary-900 transition-colors hover:text-primary-600 group-last:pr-0 dark:text-zinc-400 dark:hover:text-primary-300 sm:px-2"
            >
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>
  </Container>
</footer>
